<h1>Add Products</h1>

<form class="needs-validation" method="POST" action="/products" novalidate>
    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label for="validationCustom01">Product Name</label>
        <input type="text" class="form-control" id="validationCustom01" placeholder="Product name" name="pname" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <label for="validationCustom02">Product Image URL</label>
        <input type="text" class="form-control" id="validationCustom02" placeholder="url" name="pimg" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <label for="validationCustom02">Product Price</label>
        <input type="Number" class="form-control" id="validationCustom02" placeholder="$" name="pprice" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

      <div class="col-md-4 mb-3">
        Select Category
        <select class="form-select" id="validationCustom04" name="pcategory" required>
            <option selected disabled value="">Select Category</option>
            <option value="Men">Men</option>
            <option value="Women">Women</option>
            <option value="Electronics">Electronics</option>
            <option value="Mobiles">Mobiles</option>
            <option value="Beauty">Beauty</option>
          </select>
      </div>

      <div class="col-md-4 mb-3">
        <label for="validationCustom02">Detailed Description about Product</label>
        <textarea type="text" cols="30" rows="10" class="form-control" id="validationCustom02" placeholder="Write Something.." name="pdesc" required></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>

      

      <div class="col-md-4 mb-3">
        <label for="validationCustomUsername">Retailer Username</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupPrepend">@</span>
          </div>
          <input type="text" class="form-control" id="validationCustomUsername" placeholder="Username" aria-describedby="inputGroupPrepend" required>
          <div class="invalid-feedback">
            Please choose a username.
          </div>
        </div>
      </div>
    </div>
  
    </div>
