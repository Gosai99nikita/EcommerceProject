        <div class="col-lg-11.5" style="margin-left: 20px; ">
          
            <div class="cards p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="user d-flex flex-row align-items-center"> <img src="https://i.imgur.com/hczKIze.jpg" width="30" class="user-img rounded-circle mr-2"> <span><medium class="font-weight-bold text-dark">&nbsp; &nbsp; user1: </medium> <medium class="font-weight-bold"> &nbsp;  &nbsp; &nbsp; <%=review.comment%></medium></span> </div> <small>2 days ago</small>
                </div>
                <div class="action d-flex justify-content-between mt-2 align-items-center">
                    <div class="reply px-4">  <small></small> </span><small></small> </div>
                    <div class="icons align-items-center"> 
            
                        <p class="starability-result" data-rating="<%=review.rating%>">
                            <!-- Rated: 3 stars -->
                        </p>
                    
                      </i> </i> </div>
                </div>
            </div>
           
            </div>
          
           
        </div>
    </div>
    <%}%>
